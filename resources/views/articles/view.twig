{% extends layout('help') %}

{% block content %}
    <div id="help">
        <div class="container">

            <h1>{{ article.title }}</h1>

            {% if article.tags %}
                <div class="tags">
                    {% for tag in article.tags.value %}
                        <a href="{{ url_route('anomaly.module.help::tags.view', {'tag': tag}) }}"
                           class="label label-info list-inline-item">
                            {{ tag }}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}

            <hr>

            {{ article.content|raw }}

        </div>
    </div>
{% endblock %}
