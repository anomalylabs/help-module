{% extends layout('help') %}

{% block content %}
    <div id="help">
        <div class="container">

            <h1>{{ article.title }}</h1>

            <ul class="list-inline">
                <li>
                    <span class="posted">
                        {{ trans('anomaly.module.help::message.posted', {'date': article.created_at.format('F j, Y')}) }}
                    </span>
                </li>
                <li>
                    <a href="{{ article.category.route('view') }}"
                       class="label label-default list-inline-item">
                        {{ article.category.name }}
                    </a>
                </li>
                {% if article.tags %}
                    {% for tag in article.tags.value %}
                        <li>
                            <a href="{{ url_route('anomaly.module.help::tags.view', {'tag': tag}) }}"
                               class="label label-info list-inline-item">
                                {{ tag }}
                            </a>
                        </li>
                    {% endfor %}
                {% endif %}
            </ul>

            <hr>

            {{ article.content|raw }}

        </div>
    </div>
{% endblock %}
