{% for sections in sections.chunk(2) %}
    <div class="row">
        {% for section in sections %}
            <div class="col-md-6">

                <h3>
                    {{ html_link(section.route('view'), section.title) }}
                </h3>

                {% set articles = section.articles().sorted().where('enabled', true).get() %}

                {% include "anomaly.module.help::articles/partials/articles" with {"articles": articles} %}

            </div>
        {% endfor %}
    </div>
{% endfor %}
